{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "terminal.integrated.defaultProfile.windows": "dev-shell",
  "terminal.integrated.defaultProfile.linux": "dev-shell",
  "terminal.integrated.profiles.windows": {
    "dev-shell": {
      "path": [
        "powershell"
      ],
      "args": [
        "${workspaceFolder}/dev-shell.bat"
      ],
      "overrideName": true,
      "env": {},
      "icon": "terminal-bash",
      "color": "terminal.ansiGreen"
    }
  },
  "terminal.integrated.profiles.linux": {
    "dev-shell": {
      "path": [
        "/bin/sh"
      ],
      "args": [
        "${workspaceFolder}/dev-shell.sh"
      ],
      "overrideName": true,
      "env": {},
      "icon": "terminal-bash",
      "color": "terminal.ansiGreen"
    }
  }
}
